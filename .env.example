# SCE2 Environment Configuration
# Copy this file to .env and fill in your values

# ==========================================
# PORT CONFIGURATION
# ==========================================
PORT=3333
NODE_ENV=development

# ==========================================
# DATABASE (Prisma)
# ==========================================
# Local development (SQLite)
DATABASE_URL="file:./dev.sqlite"

# Production (PostgreSQL) - uncomment when ready to migrate
# DATABASE_URL="postgresql://user:password@host:5432/sce_db?schema=public"

# ==========================================
# SERVER CONFIGURATION
# ==========================================
# Base URL for the API server (used for QR codes, callbacks)
BASE_URL="http://localhost:3333"

# When deployed to cloud:
# BASE_URL="https://your-domain.com"

# ==========================================
# FILE UPLOAD CONFIGURATION
# ==========================================
# Maximum file upload size (in bytes)
MAX_FILE_SIZE=10485760

# Upload directory (relative to cloud-server root)
UPLOAD_DIR="./uploads"

# ==========================================
# CORS CONFIGURATION
# ==========================================
# Allowed origins for API access (comma-separated)
ALLOWED_ORIGINS="http://localhost:5173,http://localhost:5174,chrome-extension://*"

# ==========================================
# SCE WEBSITE CONFIGURATION
# ==========================================
SCE_BASE_URL="https://sce.dsmcentral.com"
SCE_FORM_PATH="/onsite/customer-search"

# ==========================================
# SCRAPING CONFIGURATION
# ==========================================
# Delay between scrape requests (ms)
SCRAPE_DELAY_MS=2000

# Maximum concurrent scrape requests
MAX_CONCURRENT_SCRAPES=3

# ==========================================
# CLOUD EXTRACTION AUTOMATION
# ==========================================
# Feature flag for non-extension SCE extraction pipeline
SCE_AUTOMATION_ENABLED=false

# Encryption key used to protect persisted session payloads
SCE_SESSION_ENCRYPTION_KEY="replace-with-32-byte-min-secret"

# Timeout for SCE automation actions (ms)
SCE_AUTOMATION_TIMEOUT_MS=45000

# ==========================================
# OPTIONAL: External Services
# ==========================================
# Overpass API for map address fetching
OVERPASS_API_URL="https://overpass-api.de/api/interpreter"

# Nominatim for reverse geocoding
NOMINATIM_API_URL="https://nominatim.openstreetmap.org/search"

# Email notifications (optional)
# SMTP_HOST="smtp.gmail.com"
# SMTP_PORT=587
# SMTP_USER="your-email@gmail.com"
# SMTP_PASS="your-app-password"
