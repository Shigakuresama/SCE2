{
  "name": "@sce2/cloud-server",
  "version": "1.0.0",
  "description": "SCE2 Cloud Server - Central API and database server",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "build:prod": "npm install && npx prisma generate && tsc",
    "start": "node dist/index.js",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:migrate": "prisma migrate dev",
    "db:studio": "prisma studio",
    "db:seed": "tsx prisma/seed.ts",
    "test": "vitest run"
  },
  "dependencies": {
    "@prisma/client": "^5.9.1",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.25",
    "@types/multer": "^1.4.13",
    "@types/node": "^20.11.0",
    "cors": "^2.8.5",
    "dotenv": "^16.6.1",
    "express": "^4.18.2",
    "multer": "^1.4.5-lts.1",
    "winston": "^3.19.0"
  },
  "devDependencies": {
    "@types/supertest": "^6.0.2",
    "prisma": "^5.9.1",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3",
    "supertest": "^7.0.0",
    "vitest": "^1.6.1"
  }
}
